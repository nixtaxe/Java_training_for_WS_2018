<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.LoginForm">
   <children>
      <VBox alignment="CENTER" layoutY="3.0" spacing="10.0">
         <children>
            <TextField fx:id="loginField" promptText="login" />
            <PasswordField fx:id="passwordField" promptText="password" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="signInButton" mnemonicParsing="false" onAction="#signIn" text="Sign in" />
                  <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#signUp" text="Sign up" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
