<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.SignUpForm">
   <children>
      <VBox alignment="CENTER" layoutY="3.0" prefHeight="183.0" prefWidth="331.0">
         <children>
            <TextField fx:id="loginField" promptText="login" />
            <PasswordField fx:id="passwordField" promptText="password" />
            <TextField fx:id="nameField" promptText="name" />
            <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#signUp" text="Sign up as reader" />
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
